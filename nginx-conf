server {
  server_name trudge.grin.io;
  listen  80;
  root /home/grin/trudge;
  access_log /dev/null;
  error_log /dev/null;
  index index.php index.html index.htm;

  location ~* .(?:xml|ogg|mp3|mp4|ogv|svg|svgz|eot|otf|woff|ttf|jpg|jpeg|gif|png|ico)$ { #css|js
    try_files $uri =404;
    expires 1d;
    access_log /dev/null;
    log_not_found off;
    add_header Pragma public;
    add_header Cache-Control "public, must-revalidate, proxy-revalidate";
  }

  location ~ /\. {
    log_not_found off;
    deny all;
  }

  # Panel
  if (!-e $request_filename) {
    rewrite ^/panel/(.*) /panel/index.php break;
  }

  # No direct access to these files
  rewrite ^/content/(.*)\.(txt|md|mdown)$ /error redirect;
  rewrite ^/site/(.*) /error redirect;
  rewrite ^/kirby/(.*) /error redirect;

  location ~ .php {
    fastcgi_index  index.php;
    include        fastcgi_params;
    fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_param  PATH_INFO $fastcgi_script_name;
    fastcgi_pass   unix:/var/run/php5-fpm.sock;
  }

  location / {
    try_files $uri $uri/ /index.php?$query_string;
  }
}
